pipeline {
    agent {
        dockerfile {
            filename 'docker/dockerfile-java'
            additionalBuildArgs '--build-arg JENKINS_USER_ID=`id -u jenkins` --build-arg JENKINS_GROUP_ID=`id -g jenkins`'
        }
    }
    
    environment {
        FOLDER = "data-collectors/vehicletraffic-bluetooth"
        ARTIFACT_NAME = "vehicletraffic-bluetooth"
        LOG_FILE_FOLDER = "/var/log/opendatahub/data-collectors"
        LOG_FILE_NAME = "dc-${ARTIFACT_NAME}"
    }

    stages {
        stage('Configure') {
            steps {
                sh 'sed -i -e "s%\\(log4j.rootLogger=\\).*\\$%\\1DEBUG,stdout,R%" ${FOLDER}/src/main/resources/log4j.properties'
	            sh 'sed -i -e "s%\\(log4j.appender.R.File=\\).*\\$%\\1${LOG_FILE_FOLDER}/${LOG_FILE_NAME}.log%" ${FOLDER}/src/main/resources/log4j.properties'
            }
        }

        stage('Build') {
            steps {
                sh 'cd ${FOLDER} && mvn -B -U clean package'
            }
        }

	    stage('Archive') {
            steps {
                archiveArtifacts artifacts: "${FOLDER}/target/dc-${ARTIFACT_NAME}.war", onlyIfSuccessful: true
            }
        }
    }
}
