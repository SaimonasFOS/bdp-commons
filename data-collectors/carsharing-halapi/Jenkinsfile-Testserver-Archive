pipeline {
    agent any
    environment{
      CARSHARING_PROPS = credentials('dc-carsharing.properties')
      TESTSERVER_TOMCAT_ENDPOINT=credentials('testserver-tomcat8-url')
    }
    stages {
	stage('Configure'){
	    steps{
	      sh 'cat "${CARSHARING_PROPS}" > data-collectors/carsharing-halapi/src/main/resources/app.properties'
	    }
	}
        stage('Test') {
            steps {
              sh 'cd data-collectors/carsharing-halapi/ && mvn clean test && mvn verify'
            }
        }
	stage('Build'){
	    steps{
	      sh 'cd data-collectors/carsharing-halapi/ && mvn clean package'
	    }
	}
	stage('Archive'){
	    steps{
	      sh 'cp data-collectors/carsharing-halapi/target/dc-carsharing-bz.war /var/builds/test-server'
	    }
	}
	stage('Deploy') {
            steps{
                sh 'cd data-collectors/carsharing-halapi && mvn tomcat:redeploy -Dmaven.tomcat.url=${TESTSERVER_TOMCAT_ENDPOINT} -Dmaven.tomcat.server=testServer'
            }
        }
    }
}
